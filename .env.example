# ComfyUI + LTX-2 + Flux Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# HuggingFace Authentication
# =============================================================================
# Required for downloading gated models (LTX-2 Upscaler, Flux 1)
# Get your token at: https://huggingface.co/settings/tokens
HF_TOKEN=

# =============================================================================
# Model Download Options
# =============================================================================
# Set to "yes" or "no" to control which models are downloaded at startup

# LTX-2 models (~20GB): checkpoint, text encoder, audio processor, upscaler
DOWNLOAD_LTX=yes

# Flux 2 models (~15GB): VAE, text encoder, diffusion model, LoRA
DOWNLOAD_FLUX=yes

# Flux 1 gated models (~25GB): VAE, diffusion model (requires HF_TOKEN)
DOWNLOAD_FLUX1_GATED=no

# =============================================================================
# Skip Options (for faster restarts)
# =============================================================================
# Set to "yes" to skip downloads (useful when using persistent volumes)

# Skip all model downloads
SKIP_MODEL_DOWNLOAD=no

# Skip custom node installation
SKIP_NODE_INSTALL=no